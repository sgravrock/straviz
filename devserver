#!/usr/bin/env python3

import os
import http.server

class Handler(http.server.CGIHTTPRequestHandler):
	def is_cgi(self):
		return super().is_cgi() and ".cgi" in self.path

os.chdir('target')

PORT = 8000
http.server.CGIHTTPRequestHandler.cgi_directories = ['/']

with http.server.HTTPServer(("", PORT), Handler) as httpd:
	httpd.serve_forever()
