#!/bin/bash
set -eu

if [ $# -ne 1 ]; then
	echo "Usage: $0 output-filename" 1>&2
	exit 1
fi

cd target
python -m SimpleHTTPServer &
trap "kill %1" SIGINT SIGTERM
cd ..

node_modules/.bin/phantomjs node_modules/phantomjs-prebuilt/lib/phantom/examples/rasterize.js http://localhost:8000?view=thumbnail $1
status=$?
kill %1
exit $status
